<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   
    tools:context=".MainActivity" >

      <TextView
        android:id="@+id/txtInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  		android:layout_centerHorizontal="true"
  		android:textSize="24sp"
        android:text="Please Add the Players!" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/PlayerView"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
       >
        <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp" >
<LinearLayout
        android:id="@+id/llPlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     
        android:layout_marginTop="0dp"
        android:visibility="visible"
        
        
        android:orientation="vertical" >
         
                </LinearLayout>
            </ScrollView>
        
    </RelativeLayout>
          
       <Button
           android:id="@+id/btnRemove"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:layout_marginTop="0dp"
           android:background="#1975D1"
           android:onClick="RemovePlayer"
           android:text="Remove"
           android:textColor="#FFFFFF" />

<Button
    android:id="@+id/btnAdd"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/btnStart"
    android:layout_alignBottom="@+id/btnStart"
    android:layout_alignParentLeft="true"
    android:background="#1975D1"
    android:onClick="AddPlayer"
    android:text="Add"
    android:textColor="#FFFFFF" />

<Button
    android:id="@+id/btnStart"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/btnRemove"
    android:layout_alignBottom="@+id/btnRemove"
    android:layout_centerHorizontal="true"
    android:background="#FF3333"
    android:onClick="StartClick"
    android:text="Start"
    android:textColor="#FFFFFF" />

</RelativeLayout>
